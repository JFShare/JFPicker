<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="WheelView">

        <!-- 滚轮样式  -->
        <attr name="isWheel" format="boolean" />
        <attr name="translateYZ" format="boolean" />
        <attr name="itemDegreeTotal" format="float" />
        <attr name="halfItemCount" format="integer" />
        <attr name="wheelItemSize" format="dimension" />
        <attr name="isLoop" format="boolean" />

        <!-- 文字  -->
        <attr name="wheelTextColor" format="color" />
        <attr name="wheelCheckedTextColor" format="color" />
        <attr name="wheelTextSize" format="dimension" />
        <attr name="wheelCheckedTextSize" format="dimension" />
        <attr name="isTextBold" format="boolean" />
        <attr name="isCheckedTextBold" format="boolean" />


        <!-- 间隔线  -->
        <attr name="wheelDividerType" format="enum">
            <enum name="line" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="wheelDividerSize" format="dimension" />
        <attr name="wheelDividerBgColor" format="color" />
        <attr name="wheelDividerColor" format="color" />
        <attr name="wheelDividerStrokeWidth" format="dimension" />
        <attr name="wheelDividerCorner" format="dimension" />

    </declare-styleable>

</resources>