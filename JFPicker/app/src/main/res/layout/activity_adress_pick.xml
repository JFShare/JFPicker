<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddressPickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="地址选择器"
            android:textColor="#333333">

        </TextView>

        <Button
            android:id="@+id/btnAdressPicker"
            style="@style/commonButton"
            android:text="地址选择器(省市区)">

        </Button>

        <Button
            android:id="@+id/btnDefault"
            style="@style/commonButton"
            android:text="地址选择器(设置默认值)">

        </Button>

        <Button
            android:id="@+id/btnAdressPickerProvinceCity"
            style="@style/commonButton"
            android:text="地址选择器(省市)">

        </Button>

        <Button
            android:id="@+id/btnAdressPickerCityCounty"
            style="@style/commonButton"
            android:text="地址选择器(市区)">

        </Button>

        <Button
            android:id="@+id/btnAdressPickerCustom"
            style="@style/commonButton"
            android:text="地址选择器(自定义数据格式之JSON，含港澳台区划)">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址选择器大部分使用了AndroidPicker的代码与数据源，\n源码地址：https://github.com/gzu-liyujiang/AndroidPicker">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="ViewPager地址选择器"
            android:textColor="#333333">

        </TextView>

        <Button
            android:id="@+id/btnViewpagerPicker"
            style="@style/commonButton"
            android:text="ViewPager类型的地址选择器">

        </Button>

        <Button
            android:id="@+id/btnViewpagerPickerDefault"
            style="@style/commonButton"
            android:text="ViewPager类型的地址选择器(设置默认值)">

        </Button>

        <Button
            android:id="@+id/btnViewpagerPickerMyStyle"
            style="@style/commonButton"
            android:text="ViewPager类型的地址选择器(自定义列表样式)">

        </Button>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="ViewPager五级网络请求选择器"
            android:textColor="#333333">

        </TextView>

        <Button
            android:id="@+id/btnNetRequestPicker"
            style="@style/commonButton"
            android:text="五级网络请求选择器(根据上一级id请求下一级数据)">

        </Button>

        <Button
            android:id="@+id/btnNetRequestPickerMyStyle"
            style="@style/commonButton"
            android:text="五级网络请求选择器(自定义列表样式)">

        </Button>
        <Button
            android:id="@+id/btnNetRequestPickerMyState"
            style="@style/commonButton"
            android:text="五级网络请求选择器(自定义状态布局)">

        </Button>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>